<resources>
    <style name="agora_voice_base_dialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="nav_title_text">
        <item name="android:textSize">@dimen/text_size_1</item>
    </style>

    <style name="gift_anim_window">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialog_center" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:windowBackground">@color/black_90_percent_transparent</item>
    </style>

    <style name="action_sheet_seek_bar">
        <item name="android:minHeight">@dimen/action_sheet_music_volume_progress_bar_height</item>
        <item name="android:maxHeight">@dimen/action_sheet_music_volume_progress_bar_height</item>
        <item name="android:progressDrawable">@drawable/setting_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
    </style>

    <style name="action_sheet_music_seek_bar" parent="action_sheet_seek_bar">
        <item name="android:max">100</item>
    </style>

    <style name="CustomMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <style name="TextAppearance.MyTheme.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.MyTheme.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.MyTheme.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Shape Appearance for medium components like cards, alert dialogs-->
    <style name="ShapeAppearance.MyTheme.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>
</resources>