<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chat_room_host_panel_owner_image"
        android:layout_width="@dimen/chat_room_host_panel_owner_image_size"
        android:layout_height="@dimen/chat_room_host_panel_owner_image_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/chat_room_host_panel_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_room_host_panel_owner_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_4"
        android:paddingStart="@dimen/margin_3"
        android:paddingEnd="@dimen/margin_3"
        android:paddingTop="@dimen/margin_1"
        android:paddingBottom="@dimen/margin_1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_2"
        android:textAlignment="gravity"
        android:gravity="center"
        android:background="@drawable/chat_room_host_panel_name_bg"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_room_host_panel_seat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_room_host_panel_owner_name"
        android:layout_marginTop="@dimen/margin_5"/>
</RelativeLayout>
