<?xml version="1.0" encoding="utf-8"?>
<io.agora.agoravoice.ui.views.CropBackgroundRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/splash_bg_layout">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_icon"
        android:layout_width="@dimen/splash_icon_size"
        android:layout_height="@dimen/splash_icon_size"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_icon"
        android:scaleType="fitXY"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/splash_app_name"
        android:layout_width="@dimen/splash_icon_size"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_icon"
        android:layout_marginTop="@dimen/margin_4"
        android:layout_centerHorizontal="true"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/splash_app_name_size"
        android:textColor="@android:color/white"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/powered_by_agora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/powered_by_agora"
        android:textColor="@color/white_80_percent_transparent"
        android:textSize="@dimen/text_size_1_1"/>
</io.agora.agoravoice.ui.views.CropBackgroundRelativeLayout>