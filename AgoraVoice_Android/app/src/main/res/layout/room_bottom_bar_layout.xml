<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/room_bottom_bar_height">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/room_bottom_btn_1"
        android:layout_width="@dimen/room_bottom_bar_height"
        android:layout_height="@dimen/room_bottom_bar_height"
        android:layout_alignParentEnd="true"
        android:background="@drawable/single_line_round_gray_bg"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/room_bottom_btn_2"
        android:layout_width="@dimen/room_bottom_bar_height"
        android:layout_height="@dimen/room_bottom_bar_height"
        android:layout_toStartOf="@id/room_bottom_btn_1"
        android:layout_marginEnd="@dimen/room_bottom_bar_margin"
        android:background="@drawable/single_line_round_gray_bg"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/room_bottom_btn_3"
        android:layout_width="@dimen/room_bottom_bar_height"
        android:layout_height="@dimen/room_bottom_bar_height"
        android:layout_toStartOf="@id/room_bottom_btn_2"
        android:layout_marginEnd="@dimen/room_bottom_bar_margin"
        android:background="@drawable/single_line_round_gray_bg"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/room_bottom_btn_4"
        android:layout_width="@dimen/room_bottom_bar_height"
        android:layout_height="@dimen/room_bottom_bar_height"
        android:layout_toStartOf="@id/room_bottom_btn_3"
        android:layout_marginEnd="@dimen/room_bottom_bar_margin"
        android:background="@drawable/single_line_round_gray_bg"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/room_bottom_bar_input_hint"
        android:layout_height="@dimen/room_bottom_bar_height"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/room_bottom_btn_4"
        android:layout_marginEnd="@dimen/room_bottom_bar_margin"
        android:paddingStart="@dimen/room_bottom_bar_edit_padding"
        android:paddingEnd="@dimen/room_bottom_bar_margin"
        android:text="@string/room_bottom_bar_input_hint"
        android:textSize="@dimen/text_size_1_1"
        android:textColor="@color/theme_gray_2"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:lines="1"
        android:background="@drawable/single_line_round_corner_gray_bg"/>
</RelativeLayout>
