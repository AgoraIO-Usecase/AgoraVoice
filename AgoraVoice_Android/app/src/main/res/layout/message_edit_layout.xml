<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/message_edit_layout_height"
    android:background="@color/theme_background_1">
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/message_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/common_margin_horizontal"
        android:layout_marginEnd="@dimen/common_margin_horizontal"
        android:layout_marginTop="@dimen/margin_2"
        android:layout_marginBottom="@dimen/margin_2"
        android:paddingStart="@dimen/margin_3"
        android:paddingEnd="@dimen/margin_3"
        android:paddingTop="@dimen/margin_2"
        android:paddingBottom="@dimen/margin_2"
        android:lines="1"
        android:imeOptions="actionDone"
        android:textSize="@dimen/text_size_1_1"
        android:textColor="@android:color/white"
        android:background="@drawable/message_edit_bg"/>
</RelativeLayout>
