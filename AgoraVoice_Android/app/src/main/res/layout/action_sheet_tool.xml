<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/action_sheet_layout">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/action_sheet_tool_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_sheet_title_height"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="@string/action_sheet_tool_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_2"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/action_sheet_tool_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_sheet_tool_title"
        android:layout_margin="@dimen/common_margin_vertical"
        android:overScrollMode="never"/>
</RelativeLayout>
